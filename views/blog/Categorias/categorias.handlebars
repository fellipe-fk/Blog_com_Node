<h3>Lista de categorias: </h3>
<hr>
<a href="/blog/categorias/add"><button class="btn btn-success">Adicionar categoria</button></a>


<div class="row">
  {{#each categorias}}
    <div class="col-md-3 mt-3">
      <div class="card mt-4">
        <div class="card-body">
          <h4>{{nome}}</h4>
          <small>Slug: {{slug}}</small><br>
          <a href="/blog/categorias/edit/{{_id}}"><button class="btn btn-success mt-2">Editar Categoria</button></a>
          <form action="/blog/categorias/deletar/{{_id}}" method="get">
            <input type="hidden" name="id" value="{{_id}}">
            <button type="submit" class="btn btn-danger mt-2">Deletar categoria</button>    
          </form>
        </div>
      </div>
    </div>
  {{else}}
    <h4 class="mt-4">Nenhuma categoria salva</h4>
  {{/each}}
</div>

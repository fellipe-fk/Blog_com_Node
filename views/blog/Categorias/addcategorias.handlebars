{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}

<h3>Nova categoria</h3>

<div class="card">
    <div class="card-body">
        <form action="/blog/categorias/cadastro" method="post">
            <label for="nome">Nome: </label>
                <input type="text" name="nome" id="nome" placeholder="nome da categoria" class="form-control mt-2">
            <label for="slug" class="mt-2">Slug: </label>
                <input type="text" name="slug" id="slug" placeholder="slug da categoria" class="form-control mt-2">
                <br>
                <button type="submit" class="btn btn-success">Cria categoria</button>
        </form>
    </div>
</div>
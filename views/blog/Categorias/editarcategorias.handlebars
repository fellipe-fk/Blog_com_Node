{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}

<h3>Editar categoria</h3>
<div class="card">
    <div class="card-body">
        <form action="/blog/categorias/edit" method="post">
            <input type="hidden" name="id" value="{{categorias._id}}">
            <label for="nome">Nome: </label>
            <input type="text" name="nome" id="nome" placeholder="Nome da categoria" class="form-control mt-2" value="{{categorias.nome}}">
            <label for="slug" class="mt-2">Slug: </label>
            <input type="text" name="slug" id="slug" placeholder="Slug da categoria" class="form-control mt-2" value="{{categorias.slug}}">
            <br>
            <button type="submit" class="btn btn-success">Editar categoria</button>
        </form>
    </div>
</div>

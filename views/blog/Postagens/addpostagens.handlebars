{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}

<div class="card">
    <div class="card-body">
        <form action="/blog/postagens/cadastro" method="post">
            <h2>Nova postagem</h2>
            <label for="titulo">Titulo: </label>
            <input type="text" name="titulo" class="form-control">
            <label for="descricao">Descri√ßao: </label>
            <input type="text" name="descricao" class="form-control">
            <label for="conteudo">Conteudo: </label>
            <textarea name="conteudo" class="form-control" ></textarea>
            <label for="categoria">Categoria: </label>
            <select name="categoria" class="form-select form-select-lg mb-3">
                {{#each categorias}}
                        <option value="{{_id}}">{{nome}}</option>
                    {{else}}
                        <option value="0">Nenhuma Categoria Registrada</option>
                {{/each}}
            </select>
            <button class="btn btn-success" type="submit">Cria postagem</button>
        </form>
    </div>
</div>